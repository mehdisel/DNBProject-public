@model ShoppingCartViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Shopping Cart</h1>
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">ProductID</th>
            <th scope="col">Product Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Total Price</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (DNBProject.Entities.DataTransferObjects.ShoppingCartItemsViewModel item in Model.CartItems)
        {
            <tr id="@item.ProductID">

                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@item.TotalPrice</td>
                <td><a class="btn btn-danger RemoveCart" href="#" role="button">Remove Cart İtem</a></td>
            </tr>
        }
        <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><a class="btn btn-success CompleteCart" href="#" role="button">Complete</a></td>
        </tr>
    </tbody>

</table>
@section scripts{ 
    <script>
        $(document).ready(function () {
            $(document).on('click', '.RemoveCart', function (e) {
                e.preventDefault();
                let id = $(this).parent().parent().attr('id');
                swal({
                    title: "Silinecek",
                    text: "Silmek istediğinizden emin misiniz ?",
                    icon: "warning",
                    buttons: ["İptal", "Sil"],
                    dangerMode: true,
                    closeOnEsc: false,
                    closeOnClickOutside: false,
                }).then(function (isConfirm) {
                    if (!isConfirm) return;
                    $.ajax({
                        type: 'post',
                        url: '/ShoppingCart/RemoveItem',
                        data: { 'ProductID': id },
                        dataType: 'Json',
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal({
                                    title: "Silindi",
                                    text: "Yönlendiriliyorsunuz",
                                    icon: "success",
                                    buttons: false,
                                    closeOnClickOutside: false,
                                    closeOnEsc: false,
                                    timer: 2000,
                                });
                                setTimeout(function () {
                                    window.location.href = "/ShoppingCart/Index";
                                }, 2000);
                            }
                        }
                    });
                })
            });
            $(document).on('click', '.CompleteCart', function (e) {
                e.preventDefault();
                let id = $(this).parent().parent().attr('id');
                swal({
                    title: "Kapatılacak",
                    text: "Kapatmak istediğinizden emin misiniz ?",
                    icon: "warning",
                    buttons: ["İptal", "Kapat"],
                    dangerMode: true,
                    closeOnEsc: false,
                    closeOnClickOutside: false,
                }).then(function (isConfirm) {
                    if (!isConfirm) return;
                    $.ajax({
                        type: 'post',
                        url: '/ShoppingCart/CloseShoppingCart',
                        dataType: 'Json',
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal({
                                    title: "Silindi",
                                    text: "Yönlendiriliyorsunuz",
                                    icon: "success",
                                    buttons: false,
                                    closeOnClickOutside: false,
                                    closeOnEsc: false,
                                    timer: 2000,
                                });
                                setTimeout(function () {
                                    window.location.href = "/ShoppingCart/Index";
                                }, 2000);
                            }
                        }
                    });
                })
            });
        });
    </script>

}